<div class="page-header">
  <% if current_user %>
  <!-- <div class="btn-group"> -->
  	<h1>Create Community</h1><br>
    <%= link_to "Create Community", create_community_path, :class => "btn btn-success" %>
  <!-- </div> -->
  <% else %>
  <% end %>
</div>

<h1>Browse Communities</h1>

<table class="table">
  <thead>
    <tr>
      <th>Community Name</th>
      <th>Current # of Players</th>
      <th>last player joined</th>
    </tr>
  </thead>

  <tbody>
  
    <% @communities.each do |community| %>
        <tr id="<%= dom_id(community) %>">
          <td><%= link_to community.name, community %></td>
          <td>5</td>
          <td><%=#"#{time_ago_in_words(community.player.created_at)} ago"
          %>
          </td>
        </tr>
    <% end %>
  </tbody>
</table>