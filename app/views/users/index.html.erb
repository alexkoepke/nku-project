<h1>Welcome!</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :choose_id %><br>
    <%= select_tag(:choose_id, options_for_select(@user_handle_array)) %>
  </p>

  <p class="button"><%= f.submit %></p>
<% end %>