<h1>Request to create a new community</h1>

<%= form_for @communities do |f| %>
  <% if @communities.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @communities.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row col-sm-4">
    <div class="form-group">
      <%= f.label :name, 'Community Name' %><br />
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>
 
  
    <div class="form-group">
      <%= f.label :description, 'Community Description' %>
      <%= f.text_area(:description, size: "24x6", class: 'form-control') %>
    </div>
  
    <div class="form-group">
      <%= f.submit "Update", class: 'form-control btn btn-primary' %>
    </div>
    
  </div>

<% end %>